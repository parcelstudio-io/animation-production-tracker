# Animation Production Tracker - Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
NODE_ENV=development
PORT=3000

# Google Cloud Project Configuration
PROJECT_ID=thebreakfastfam
REGION=us-central1

# Database Configuration (Cloud SQL)
DB_HOST=/cloudsql/thebreakfastfam:us-central1:animation-db
DB_NAME=production_tracker
DB_USER=app-user
DB_PASS=your_secure_password_here
DB_PORT=5432

# Local Development Database (for testing)
# Uncomment these for local PostgreSQL testing
# DB_HOST=localhost
# DB_NAME=production_tracker_dev
# DB_USER=postgres
# DB_PASS=your_local_password

# Sync Configuration
CLOUD_WEBAPP_URL=https://animation-production-tracker-xyz-uc.a.run.app
NGROK_WEBHOOK_SECRET=your_webhook_secret_key_here
NGROK_DOMAIN=your-custom-domain.ngrok.io

# Google Cloud Storage
STORAGE_BUCKET_NAME=thebreakfastfam-production-files

# Security
WEBHOOK_SECRET=your_webhook_secret_for_validation

# Feature Flags
ENABLE_CLOUD_SYNC=true
ENABLE_LOCAL_EXCEL=true
AUTO_BACKUP_EXCEL=true